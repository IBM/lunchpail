{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": ["package.json", "src/renderer/src/**/*.ts", "src/renderer/src/**/*.tsx", "src/common/**/*.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@jay/util/*": ["src/common/util/*"],
      "@jay/images/*": ["src/renderer/images/*"],
      "@jay/renderer/*": ["src/renderer/src/*"],
      "@jay/resources/*": ["src/renderer/src/content/*"],
      "@jay/components/*": ["src/renderer/src/components/*"],
      "@jay/common/*": ["src/common/*"]
    }
  }
}
