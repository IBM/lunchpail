{
  "name": "jaas",
  "version": "0.0.10",
  "description": "Jobs as a Service",
  "main": "./out/main/index.js",
  "author": "@starpit",
  "homepage": "https://github.ibm.com/cloud-computer/codeflare-platform",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "prepare": "cp hooks/* ../../.git/hooks",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "if [[ ! -f ./resources/jaas-lite.yml ]]; then npm run build:installers; fi; electron-vite dev --watch --no-clearScreen",
    "test": "npm run build",
    "build:installers": "./hack/generate-installers.sh",
    "build": "npm run typecheck && npm run build:installers && electron-vite build",
    "postinstall": "./hack/postinstall.sh; electron-builder install-app-deps && npm run build:installers",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:darwin": "npm run build:mac",
    "build:linux": "npm run build && electron-builder --linux dir --config",
    "build:Linux": "npm run build:linux"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-python": "^6.1.4",
    "@codemirror/legacy-modes": "^6.3.3",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@patternfly/react-core": "^5.2.0",
    "@sindresorhus/merge-streams": "^2.2.1",
    "@uiw/codemirror-themes": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "chalk": "^5.3.0",
    "change-maker": "^1.2.0",
    "electron-context-menu": "^3.6.1",
    "electron-updater": "^6.1.7",
    "ini": "^4.1.1",
    "is-url-superb": "^6.1.0",
    "js-yaml": "^4.1.0",
    "lorem-ipsum": "^2.0.8",
    "md5": "^2.3.0",
    "minio": "^7.1.3",
    "react-router": "^6.22.0",
    "react-router-dom": "^6.22.0",
    "react-sparklines-typescript-v2": "^1.3.6",
    "remove-accents": "^0.5.0",
    "split2": "^4.2.0",
    "tmp-promise": "^3.0.3",
    "unique-names-generator": "^4.7.1",
    "untruncate-json": "^0.0.1",
    "which": "^4.0.0",
    "word-wrap": "^1.2.5",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-webgl": "^0.16.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.41.2",
    "@types/ini": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/split2": "^4.2.3",
    "@types/which": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-checker": "^0.6.4",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "lint-staged": {
    "**/*.{scss,css,html,js,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    ".#*",
    "out",
    "*~"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
