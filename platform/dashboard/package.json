{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier --write '**/*.{scss,css,html,js,json,md,ts,tsx}'",
    "lint": "eslint . --ext '**/*.{js,ts,tsx}'",
    "prepare": "cp hooks/* ../../.git/hooks",
    "dev": "nodemon src/server/main.ts -w src/server",
    "test": "tsc --noEmit",
    "start": "NODE_ENV=production ts-node src/server/main.ts",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview",
    "build": "vite build"
  },
  "dependencies": {
    "@patternfly/react-core": "^5.0.1",
    "express": "^4.18.2",
    "is-url-superb": "^6.1.0",
    "lorem-ipsum": "^2.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "react-sparklines-typescript-v2": "^1.3.6",
    "react-syntax-highlighter": "^15.5.0",
    "split2": "^4.2.0",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@types/split2": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.49.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-express": "*",
    "vite-plugin-checker": "^0.6.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "lint-staged": {
    "**/*.{scss,css,html,js,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    ".#*",
    "*~"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
