{
  "name": "jay",
  "version": "0.0.10",
  "description": "Jobs as a Service",
  "main": "./out/main/index.js",
  "author": "@starpit",
  "homepage": "https://github.ibm.com/cloud-computer/codeflare-platform",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "prepare": "cp hooks/* ../../.git/hooks",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "if [[ ! -f ./resources/jaas-lite.yml ]]; then npm run build:installers; fi; electron-vite dev --watch --no-clearScreen",
    "test": "npm run build",
    "build:installers": "./hack/generate-installers.sh",
    "build": "npm run typecheck && npm run build:installers && electron-vite build",
    "postinstall": "./hack/postinstall.sh; electron-builder install-app-deps && npm run build:installers",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:darwin": "npm run build:mac",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:Linux": "npm run build:linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@patternfly/react-core": "^5.1.1",
    "change-maker": "^1.2.0",
    "electron-updater": "^6.1.4",
    "is-url-superb": "^6.1.0",
    "js-yaml": "^4.1.0",
    "lorem-ipsum": "^2.0.8",
    "md5": "^2.3.0",
    "minio": "^7.1.3",
    "react-router": "^6.18.0",
    "react-router-dom": "^6.18.0",
    "react-sparklines-typescript-v2": "^1.3.6",
    "react-syntax-highlighter": "npm:@fengkx/react-syntax-highlighter@15.6.1",
    "remove-accents": "^0.5.0",
    "split2": "^4.2.0",
    "tmp-promise": "^3.0.3",
    "unique-names-generator": "^4.7.1",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.39.0",
    "@types/js-yaml": "^4.0.9",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-syntax-highlighter": "^15.5.10",
    "@types/split2": "^4.2.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "electron-vite": "^1.0.28",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-checker": "^0.6.2",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "lint-staged": {
    "**/*.{scss,css,html,js,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    ".#*",
    "out",
    "*~"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
